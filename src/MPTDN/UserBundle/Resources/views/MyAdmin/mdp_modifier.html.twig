{% extends "::base.html.twig" %}
{% block titre %}Modifier mot de passe{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-1 col-lg-1">
            <br>
            <a href="{{ path('admin_homepage') }}" class="btn btn-default btn-lg"><i class="fa fa-arrow-left"> Retour</i></a>
        </div>
        <div class="col-md-offset-3 col-lg-offset-3 col-md-4 col-lg-4 text-center">
            <h1 class="text-primary">Modifiermot de passe d'utilisateur</h1>
            <h5>Gestion d'utilisateur</h5>
        </div>
        <h1></h1>
    </div>

    <div class="row">
        <div class="col-lg-6 col-md-6">
            <form action="#"  method="POST" class="fos_user_registration_register">
                <div class="modal-header" style="background-color: #e9e9e9">
                    <h3 class="modal-title text-warning"><i class="fa fa-lock"></i> Changer Mot de Passe Utilisateur</h3>
                </div>
                <div class="">
                    <div class="text-center">
                        <div class="row">

                            <div class="col-sm-offset-3 col-md-offset-3 col-lg-offset-3 col-lg-6 col-md-6">
                                <div class="form-group">
                                    <label for="">Tapez le mot de passe</label>
                                    <input type="text" placeholder="Nouveau mot de passe" class="form-control" name="mdp">
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
                <hr>
                <div class="">
                    <input type="submit" value="Enregistrer" class="btn btn-warning btn-lg" id="enregistrer_v">
                    <a href="{{ path('admin_user_modifier', { 'id' : user.id }) }}" class="btn btn-default btn-lg" >Annuler</a>
                </div>

            </form>
            {#----------RIEN--------------#}
            <div class="row">
                <div class="col-lg-3" style="width: 250px; height: 300px; text-align: center">


                </div>
            </div>
        </div>

        <div class="col-lg-6 col-md-6">
            <h2 class="text-primary">Information:</h2>
            <hr>
            <h3>Nom:</h3> <p>{{ user.nom }}</p>
            <h3>Login:</h3> <p>{{ user.username }}</p>
            <h3>Email:</h3> <p>{{ user.email }}</p>
            <h3>RÃ´le(s):</h3>
            <p>
                {% for role in user.roles %}
                    {{ role|trans }} -
                {% endfor %}
            </p>
        </div>
    </div>



{% endblock %}
