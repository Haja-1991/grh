                <h2 style="font-size: 26px">Demande de paiement reste congé</h2>
            </div>
        </a>
        {% if app.user.ifRole('ROLE_PAIE') %}
            <a href="{{ path('listeAvanceSpeciale') }}">
                <div class="col-md-3  center-block text-center well accueil_btn">
                    <img src="{{ asset('images/accueil_avance_special.jpg') }}" alt="" width="160" class="">
                    <h2 style="font-size: 24px">Liste Avance Spéciale</h2>
                </div>
            </a>

            <a href="{{ path('paie_homepage') }}">
                <div class="col-md-3  center-block text-center well accueil_btn">
                    <img src="{{ asset('images/accueil_compte_paie.jpg') }}" alt="" width="160" class="">
                    <h2 style="font-size: 24px">Compte Paie Employé</h2>
