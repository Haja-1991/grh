{% extends 'base.html.twig' %}
{% block titre %}Accueil{% endblock %}


{% block body %}
    <style>
        .accueil_btn{
            margin-left: 7px;
        }
        .col-md-3{
            width: 24%;
        }
        .accueil_btn > img:hover{
            -webkit-filter: saturate(3); filter: saturate(3);
        }

        .accueil_btn:hover{
            color: #4d4d4d;
            border-radius: 10px;
        }
    </style>

    <h1 class="text-primary">Page d'accueil</h1>
    <a href="http://{{ servIP }}/IBC/web/" ><h3 class="text-right"><img width="32" height="32" src="{{ asset('images/RH.ico') }}" alt=""> Aller vers Hissab</h3></a>

    <hr>

    <h1 class="text-primary">MENU RH</h1>

    <div class="row">
        {% if app.user.ifRole('ROLE_RH') or app.user.ifRole('ROLE_SEC') %}
            <a href="{{ path('absence_index') }}">
                <div class="col-md-3  center-block text-center well accueil_btn">
                    <img src="{{ asset('images/accueil_absence.jpg') }}" alt="" width="160" class="">
                    <h2>Liste Absence et Retard</h2>
                </div>
            </a>
        {% endif %}

        <a href="{{ path('dcp_index') }}">
            <div class="col-md-3  center-block text-center well accueil_btn">
                <img src="{{ asset('images/accueil_dcp.jpg') }}" alt="" width="160" class="">
